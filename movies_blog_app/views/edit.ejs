<% include partials/header.ejs %>

    <div class='container'>
        <div class='row'>
            <div class='col-sm-12'>
                <div class='d-flex justify-content-center'>
                    <h1 class='display-4 show-title d-block'>
                        <%= post.Title %>
                    </h1>
                </div>
                <div class='d-flex justify-content-center mt-3'>
                    <img src='<%= post.Image %>'>
                </div>
                <div class='text-muted show-text'>
                    <form action='/posts/<%= post._id %>?_method=PUT' method='POST'>
                        <div class='row'>
                            <div class='col-sm-12'>
                                Year: <input type="text" name='post[Year]' class="form-control mt-3 edit-form" placeholder="Movie/Serie Year">
                            </div>
                            <div class='col-sm-12'>
                                Director: <input type="text" name='post[Director]' class="form-control mt-1 edit-form" placeholder="Director">
                            </div>
                            <div class='col-sm-12'>
                                Writers: <input type="text" name='post[Writers]' class="form-control mt-1 edit-form" placeholder="Writers">
                            </div>
                            <div class='col-sm-12'>
                                Actors: <input type="text" name='post[Actors]' class="form-control mt-1 edit-form" placeholder="Actors">
                            </div>
                            <div class='col-sm-12'>
                                Plot: <input type="text" name='post[Plot]' class="form-control mt-1 edit-form" placeholder="Plot">
                            </div>
                            <div class='col-sm-12'>
                                IMDB Rating: <input type="text" name='post[imdbRating]' class="form-control mt-1 edit-form" placeholder="IMDB Rating">
                            </div>
                            <div class='col-sm-12'>
                                The Internet Movie Database Rating: <input type="text" name='post[tmbRating]' class="form-control mt-1 edit-form" placeholder="TMB Rating">
                            </div>
                            <div class='col-sm-12'>
                                Rotten Tometoes Rating: <input type="text" name='post[rtRating]' class="form-control mt-1 edit-form" placeholder="Rotten Tomatoes Rating">
                            </div>
                            <div class='col-sm-12'>
                                Metacritic Rating: <input type="text" name='post[metacriticRating]' class="form-control mt-1 edit-form" placeholder="Metacritic Rating">
                                <input type="hidden" name='post[Title]'  value='<%= post.Title %>' class="form-control mt-1 edit-form" placeholder="Metacritic Rating">
                                <input type="hidden" name='post[Image]' value='<%= post.Image %>' class="form-control mt-1 edit-form" placeholder="Metacritic Rating">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Update!</button>
                    </form>
                </div>
            </div>
      </div>
    </div>

<% include partials/footer.ejs %>